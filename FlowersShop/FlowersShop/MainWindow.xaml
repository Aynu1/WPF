<Window x:Class="FlowersShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowersShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Background="AliceBlue"/>
        <Grid Grid.Row="2" Background="Blue"/>
        <Image Source="/Resources/logoMagaz.jpg" HorizontalAlignment="Left"/>
        <TextBlock Text="Цветочный магазин" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
        <Frame Grid.Row="1" Name="MainFrame"/>
    </Grid>
</Window>
