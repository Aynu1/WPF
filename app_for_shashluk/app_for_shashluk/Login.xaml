<Page x:Class="app_for_shashluk.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_for_shashluk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Padding="20 20 20 35" VerticalAlignment="Center" 
                Background="#C9BBCF" CornerRadius="25">
            <Border.Effect>
                <DropShadowEffect Opacity="0.5"/>
            </Border.Effect>
            <StackPanel VerticalAlignment="Center">
            <Label Content="Логин" FontSize="20"/>
            <TextBox x:Name="LoginTB" FontSize="20"/>
            <Label Content="Пароль" FontSize="20"/>
            <PasswordBox x:Name="PassBox" FontSize="20"/>
            <Button x:Name="LoginBtn" Content="Войти" FontSize="20" Margin="0 15 0 0" Click="LoginBtn_Click"/>
        </StackPanel>
        </Border>
        
    </Grid>
</Page>
