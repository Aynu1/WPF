<Window x:Class="Списки_2._4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Списки_2._4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Height="50" Width="150" VerticalContentAlignment="Top">
            <ComboBoxItem IsSelected="True">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Lilii.png" Width="60"/>
                    <TextBlock Text="Lilii.png"/>
                </StackPanel>
            </ComboBoxItem>
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Pitunii.png" Width="60"/>
                <TextBlock Text="Pitunii.png"/>
            </StackPanel>
            <StackPanel>
                <Image Source="/Resources/Romashki.png" Width="60"/>
                <TextBlock Text="Romashki.png"/>
            </StackPanel>
        </ComboBox>
    </Grid>
</Window>
